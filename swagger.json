{
  "openapi": "3.0.1",
  "info": {
    "version": "2.0.2",
    "title": "Notes API Swagger",
    "description": "Showing off swagger-ui-express",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json"],
  "servers": [
    { "url": "https://notes-ts-backend.onrender.com/api" },
    { "url": "http://localhost:3000/api" }
  ],
  "paths": {
    "/notes": {
      "get": {
        "tags": ["Notes"],
        "summary": "Get all notes",
        "description": "This endpoint returns all notes.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Note"
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "post": {
        "tags": ["Notes"],
        "summary": "Create a new note",
        "description": "This endpoint creates a new note.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "note",
            "in": "body",
            "description": "Note object that needs to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/notes/{id}": {
      "get": {
        "tags": ["Notes"],
        "summary": "Get a note by ID",
        "description": "This endpoint returns a note by its ID.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the note to get",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "tags": ["Notes"],
        "summary": "Update a note by ID",
        "description": "This endpoint updates a note by its ID.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the note to update",
            "required": true,
            "type": "string"
          },
          {
            "name": "note",
            "in": "body",
            "description": "Updated note object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "delete": {
        "tags": ["Notes"],
        "summary": "Delete a note by ID",
        "description": "This endpoint deletes a note by its ID.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the note to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/notes/stats": {
      "get": {
        "tags": ["Notes"],
        "summary": "Get aggregated stats of notes",
        "description": "This endpoint returns aggregated statistics of notes.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Stats"
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Note": {
        "type": "object",
        "properties": {
            "name": { 
                "type": "string"
            },
            "createdAt": {
                 "type": "string"
                },
            "content": { 
                "type": "string"
            },
            "category": { 
                "type": "string",
                 "enum": [
                    "Task", 
                    "Random Thought",
                    "Idea"
                    ]
                },
            "datesMentioned": {
                 "type": ["string"],
                  "default": [] 
                },
            "archived": {
                 "type": "Boolean",
                  "default": false 
                }
            }

        }
    }
}